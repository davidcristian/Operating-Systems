    "version": "0.2.0",
    "configurations": [
        {
            "name": "NASM: Current File",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "cmd.exe",
            "args": [
                "/q",
                "/c",
                "${fileBasenameNoExtension}.exe", //"\"${fileBasenameNoExtension}.exe\""
                "&",
                "echo.",
                // "&",
                // "pause"
            ],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "console": "externalTerminal",
            "preLaunchTask": "Build"
        },
    ]
}